<Window x:Class="MyDiary.E_Mails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDiary"
        mc:Ignorable="d"
                    Title="E-Mails" MinHeight="650" MaxHeight="650" MinWidth="1000" MaxWidth="1000" WindowStartupLocation="CenterScreen">
    <DockPanel Background="LightBlue">

        <Grid DockPanel.Dock="Top" Background="LightBlue">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Image Source="images\logo1.png" Grid.Row="0" Grid.Column="0"  Stretch="Fill" Height="55" Margin="0,0,81.4,0" Grid.RowSpan="4" VerticalAlignment="Top" />
            <Label Content="E-Mails" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="30" FontFamily="Times " HorizontalContentAlignment="Center"/>
            <Label  Content="LabelUserId" Grid.Row="4" HorizontalContentAlignment="Right" Grid.Column="2"/>





        </Grid>
        <Grid DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Click="onClick_btn_meinTagebuch" Grid.Row="0" Grid.Column="0" Content="Mein Tagebuch"  Grid.RowSpan="3" Grid.ColumnSpan="2" Height="64" Width="120" Margin="5,40,-42.2,50.2" VerticalAlignment="Top"/>
            <Button Click="onClick_btn_meineKontakte" Grid.Row="2" Grid.Column="0" Content="Meine Kontakte"   Grid.RowSpan="2" Grid.ColumnSpan="2" Height="64" Margin="5,19.2,-42.2,18.6" VerticalAlignment="Top"/>
            <Button Click="onClick_btn_termineUndErinnerungen" Grid.Row="4" Grid.Column="0" Content="Termine" Grid.RowSpan="2" Grid.ColumnSpan="2" Height="64" Margin="5,0.4,-43.2,0" VerticalAlignment="Top"/>
            <Button Click="onClick_btn_eMails" Grid.Row="5" Grid.Column="0" Content="E-Mails" Background="DodgerBlue" Grid.RowSpan="3" Grid.ColumnSpan="2" Height="64"  Margin="5,46.2,-42.2,44.8" VerticalAlignment="Top"/>
        </Grid>
        <Grid Background="White" DockPanel.Dock="Right" Margin="60,10,10,20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Height="50" Stretch="Fill" StretchDirection="UpOnly">
                <Button Content="Eine neue E-Mail senden"    />

            </Viewbox>
            <Viewbox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5" Height="50" Stretch="Fill" StretchDirection="UpOnly" >
                <Button  Content="Gesendete E-Mails anzeigen" />
            </Viewbox>
        </Grid>


    </DockPanel>
</Window>
